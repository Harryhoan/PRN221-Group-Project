                                    <nav>
                                        <ul id="navigation">
                                            <li><a asp-page="/Index">Home</a></li>
                                            <li><a asp-page="/About">About Us</a></li>
                                            <li>
                                                <a asp-page="/Services/Index">Services</a>
                                                <ul class="submenu">
                                                    <li><a asp-page="/Services/Bath">Bath</a></li>
                                                    <li><a asp-page="/Services/Nail">Nail Trimming</a></li>
                                                    <li><a asp-page="/Services/Ear">Ear Cleaning</a></li>
