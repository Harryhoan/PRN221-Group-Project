@page
@model PRN211GroupProject.Pages.Staff.BookingPage.EditModel

@{
    ViewData["Title"] = "Edit Booking";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title mb-0">Edit Booking</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Booking.Id" />
                    <div class="form-group mb-3">
                        <label asp-for="Booking.Account" class="control-label"></label>
                        <input asp-for="Booking.AccountId" class="form-control" disabled/>
                        <span asp-validation-for="Booking.AccountId" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Booking.Started" class="control-label"></label>
                        <input asp-for="Booking.Started" class="form-control" disabled/>
                        <span asp-validation-for="Booking.Started" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Booking.Available" class="control-label"></label>
                        <select asp-for="Booking.AvailableId" class="form-control" asp-items="ViewBag.availableList"></select>
                        <span asp-validation-for="Booking.AvailableId" class="text-danger"></span>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <div class="form-group text-center">
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
