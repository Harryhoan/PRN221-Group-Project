@page
@model PRN211GroupProject.Pages.Staff.BookingPage.DeleteModel

@{
    ViewData["Title"] = "Delete Booking";
    Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}

<h1 class="text-center text-danger">Delete Booking</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3>Are you sure you want to delete this booking?</h3>
                </div>
                <div class="card-body">
                    <h4>Booking Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Booking.Started)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Booking.Started)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Booking.Ended)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Booking.Ended)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Booking.Created)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Booking.Created)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Booking.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Booking.Status)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Booking.Account)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Booking.Account.Email)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Booking.Available)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Booking.Available.Id)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post" class="d-inline">
                        <input type="hidden" asp-for="Booking.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                    <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
