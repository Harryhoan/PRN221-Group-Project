@page
@model PRN211GroupProject.Pages.AvailablePage.EditModel

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}
<h4>Service</h4>
<hr />

@if (Model.Available != null)
{
	<div class="row">
		<div class="col-md-4">
			<form method="post">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<input type="hidden" asp-for="Available.Id" required />
				<div class="form-group">
					<label asp-for="Available.ServiceId" class="control-label"></label>
					<select asp-for="Available.ServiceId" class="form-control" required>
						@foreach (var option in Model.Services)
						{
							<option value="@option.Id">@option.Name</option>
						}
					</select>
					<span asp-validation-for="Available.ServiceId" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Available.SpotId" class="control-label"></label>
					<select asp-for="Available.SpotId" class="form-control" require>
						@foreach (var option in Model.Spots)
						{
							@if (option.Id == Model.Available.Id)
							{
								<option value="@option.Id" selected)>@option.Name</option>
							}
							else
							{
								<option value="@option.Id" )>@option.Name</option>
							}
						}
					</select>
					<span asp-validation-for="Available.SpotId" class="text-danger"></span>
				</div>
				<div class="form-group">
					<input type="submit" value="Save" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
}
<div>
	<a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
