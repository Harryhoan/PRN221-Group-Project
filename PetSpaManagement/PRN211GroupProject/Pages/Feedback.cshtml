@page
@model PRN211GroupProject.Pages.FeedbackModel

@{
    ViewData["Title"] = "Feedback";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Feedback.Id" class="control-label"></label>
                <input asp-for="Feedback.Id" class="form-control" />
                <span asp-validation-for="Feedback.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Information" class="control-label"></label>
                <input asp-for="Feedback.Information" class="form-control" />
                <span asp-validation-for="Feedback.Information" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Feedback.Status" /> @Html.DisplayNameFor(model => model.Feedback.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Rating" class="control-label"></label>
                <input asp-for="Feedback.Rating" class="form-control" />
                <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Created" class="control-label"></label>
                <input asp-for="Feedback.Created" class="form-control" />
                <span asp-validation-for="Feedback.Created" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.Updated" class="control-label"></label>
                <input asp-for="Feedback.Updated" class="form-control" />
                <span asp-validation-for="Feedback.Updated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.AccId" class="control-label"></label>
                <select asp-for="Feedback.AccId" class ="form-control" asp-items="ViewBag.AccId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Feedback.ServiceId" class="control-label"></label>
                <select asp-for="Feedback.ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
