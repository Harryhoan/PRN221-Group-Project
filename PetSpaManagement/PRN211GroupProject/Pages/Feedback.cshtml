<body>
    <main>
        <!-- Hero Area Start -->
        <div class="slider-area2 slider-height2 d-flex align-items-center">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center pt-50">
                            <h2>Feedback</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Hero Area End -->
        <!-- ================ contact section start ================= -->
        <section class="contact-section">
            <div class="container">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="form-contact contact_form" action="contact_process.php" method="post" id="contactForm" novalidate="novalidate">
                            <form method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="Feedback.Information" class="control-label font-weight-bold"></label>
                                    <textarea asp-for="Feedback.Information" class="form-control w-100" name="message" id="message" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'" placeholder="Enter Message"></textarea>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="Feedback.Rating" class="control-label font-weight-bold"></label>
                                        <div class="rating">
                                            <input asp-for="Feedback.Rating" type="radio" id="star5" name="Feedback.Rating" value="5" /><label for="star5" title="5 stars"></label>
                                            <input asp-for="Feedback.Rating" type="radio" id="star4" name="Feedback.Rating" value="4" /><label for="star4" title="4 stars"></label>
                                            <input asp-for="Feedback.Rating" type="radio" id="star3" name="Feedback.Rating" value="3" /><label for="star3" title="3 stars"></label>
                                            <input asp-for="Feedback.Rating" type="radio" id="star2" name="Feedback.Rating" value="2" /><label for="star2" title="2 stars"></label>
                                            <input asp-for="Feedback.Rating" type="radio" id="star1" name="Feedback.Rating" value="1" /><label for="star1" title="1 star"></label>
                                        </div>
                                        <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Feedback.AccId" class="control-label font-weight-bold"></label>
                                        <select asp-for="Feedback.AccId" class="form-control" asp-items="ViewBag.AccId"></select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Feedback.ServiceId" class="control-label font-weight-bold"></label>
                                        <select asp-for="Feedback.ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                                    </div>
                                </div>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="form-group mt-3">
                                        <input type="submit" value="Send" class="button button-contactForm boxed-btn" />
                                    </div>
                                }
                                else
                                {
                                    <div class="alert">
                                        You need to <a href="/Accounts/Login" class="alert-link">log in</a> to provide feedback.
                                    </div>
                                }
                            </form>
                        </div>

                    </div>
                    <div class="col-lg-3 offset-lg-1">
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-home"></i></span>
                            <div class="media-body">
                                <h3>Buttonwood, California.</h3>
                                <p>Rosemead, CA 91770</p>
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                            <div class="media-body">
                                <h3>+1 253 565 2365</h3>
                                <p>Mon to Fri 9am to 6pm</p>
                            </div>
                        </div>
                        <div class="media contact-info">
                            <span class="contact-info__icon"><i class="ti-email"></i></span>
                            <div class="media-body">
                                <h3>support@colorlib.com</h3>
                                <p>Send us your query anytime!</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- ================ contact section end ================= -->
    </main>

    <!-- Star style script -->
    <style>
        .alert {
            padding: 20px;
            background-color: orange;
            color: white;
        }

        .closebtn {
            margin-left: 15px;
            color: white;
            font-weight: bold;
            float: right;
            font-size: 22px;
            line-height: 20px;
            cursor: pointer;
            transition: 0.3s;
        }

            .closebtn:hover {
                color: black;
            }

        .rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
        }

            .rating input {
                display: none;
            }

            .rating label {
                position: relative;
                width: 1em;
                font-size: 2rem;
                color: #FFD700;
                cursor: pointer;
            }

                .rating label::before {
                    content: "★";
                    position: absolute;
                    opacity: 0.3;
                }

                .rating label:hover:before,
                .rating label:hover ~ label:before {
                    opacity: 1 !important;
                }

            .rating input:checked ~ label:before {
                opacity: 1;
            }

            .rating input:checked + label:hover:before,
            .rating input:checked + label:hover ~ label:before,
            .rating label:hover ~ input:checked ~ label:before {
                opacity: 0.4;
            }
    </style>
