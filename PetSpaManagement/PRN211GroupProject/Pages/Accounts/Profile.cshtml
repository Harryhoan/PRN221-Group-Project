<body>
    <div class="profile-container">
        <div class="profile-header">
            <h2>User Profile</h2>
        </div>
        <form class="profile-form">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" id="email" class="form-control" placeholder="Email" value="user@example.com" readonly>
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" id="username" class="form-control" placeholder="Username" value="JohnDoe" readonly>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="tel" id="phone" class="form-control" placeholder="Phone Number" value="1234567890" readonly>
            </div>
            <div class="text-center">
                <a href="#" class="btn btn-primary">Edit Profile</a>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS and dependencies (not required for styling) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    @Html.Raw("<script src='https://cdn.jsdelivr.net/npm/@popperjs/core@1.16.1/dist/umd/popper.min.js'></script>")
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
