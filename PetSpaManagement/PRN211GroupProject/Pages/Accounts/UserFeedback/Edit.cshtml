@page
@model PRN211GroupProject.Pages.Accounts.UserFeedback.EditModel

@{
    ViewData["Title"] = "Edit Feedback";
    var popperJsUrl = "https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js";
}

<style>
    .center-content {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    .form-container {
        width: 100%;
        max-width: 600px;
        margin-top: 20px;
    }

    .form-group label {
        font-weight: bold;
    }

    a {
        color: black;
        transition: color 0.3s;
    }

        a:hover {
            color: red;
        }
</style>

<div id="preloader-active">
    <div class="preloader d-flex align-items-center justify-content-center">
        <div class="preloader-inner position-relative">
            <div class="preloader-circle"></div>
            <div class="preloader-img pere-text">
                <img src="~/assets/img/logo/logo.png" alt="">
            </div>
        </div>
    </div>
</div>

<main>
    <div class="slider-area2 slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center pt-50">
                        <h2>Edit Feedback</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="card center-content">
        <div class="form-container">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Feedback.Id" />
                <div class="form-group">
                    <label asp-for="Feedback.Information" class="control-label"></label>
                    <input asp-for="Feedback.Information" class="form-control" />
                    <span asp-validation-for="Feedback.Information" class="text-danger"></span>
                </div>
                <div class="form-group" hidden>
                    <label asp-for="Feedback.Created" class="control-label"></label>
                    <input asp-for="Feedback.Created" class="form-control" />
                    <span asp-validation-for="Feedback.Created" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Feedback.Rating" class="control-label"></label>
                    <input asp-for="Feedback.Rating" class="form-control" min="1" max="5"/>
                    <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Feedback.ServiceId" class="control-label"></label>
                    <select asp-for="Feedback.ServiceId" class="form-control" asp-items="ViewBag.ServiceId"></select>
                    <span asp-validation-for="Feedback.ServiceId" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-row">
                    <div class="col">
                        <input type="submit" value="Save" class="btn btn-danger" />
                    </div>
                    <div class="col">
                        <a value="Close" class="btn btn-danger" asp-page="./Index">Back to List</a>
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>

</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
