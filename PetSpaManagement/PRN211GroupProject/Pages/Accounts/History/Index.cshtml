            <div class="preloader-circle"></div>
            <div class="preloader-img pere-text">
                <img src="~/assets/img/logo/logo.png" alt="">
            </div>
        </div>
    </div>
</div>
<main>
    <div class="slider-area2 slider-height2 d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="hero-cap text-center pt-50">
                        <h2>Booking</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <body>
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Account Manager</h4>
                </div>
            </div>
            <div class="table-responsive">
                <table id="add-row"
                       class="display table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>
                                @Html.DisplayNameFor(model => model.Bill[0].Created)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Bill[0].Started)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Bill[0].Total)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Bill[0].Voucher)
                            </th>
                            <th style="width: 10%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Bill)
                        {

                            <tr>
                                <td>@(Model.Bill.IndexOf(item) + 1)</td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Created)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Started)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Total)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Voucher.Name)
                                </td>
                                <td>
                                    <div class="form-button-action">
                                        <a type="button" asp-page="./Details" asp-route-id="@item.Id"
                                           data-bs-toggle="tooltip"
                                           title=""
                                           class="btn btn-link btn-primary btn-lg"
                                           data-original-title="Edit Task">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        </div>

        <!--   Core JS Files   -->
        <script src="~/adminAssets/assets/js/core/jquery-3.7.1.min.js"></script>
        <script src="~/adminAssets/assets/js/core/popper.min.js"></script>
        <script src="~/adminAssets/assets/js/core/bootstrap.min.js"></script>

        <!-- jQuery Scrollbar -->
        <script src="~/adminAssets/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>

        <!-- Chart JS -->
