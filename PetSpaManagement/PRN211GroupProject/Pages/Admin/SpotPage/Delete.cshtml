@page
@model PRN211GroupProject.Pages.Admin.SpotPage.DeleteModel

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<div class="col-md-12">
	<h3>Are you sure you want to delete this?</h3>
</div>
<div class="col-md-12">
	<div class="card">
		<h4 class="card-title d-flex align-items-center">Spot</h4>
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-2">
					ServiceId
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Spot.Name)
				</dd>
				<dt class="col-sm-2">
					SpotId
				</dt>
				<dd class="col-sm-10">
					@Html.DisplayFor(model => model.Spot.Status)
				</dd>
			</dl>
		</div>
		<div class="card-footer">
			<form method="post">
				<input type="hidden" asp-for="Spot.Id" />
				<input type="submit" value="Delete" class="btn btn-danger" /> &nbsp
				<a asp-page="./Index" class="btn btn-primary">Back to List</a>
			</form>
		</div>
	</div>
</div>
