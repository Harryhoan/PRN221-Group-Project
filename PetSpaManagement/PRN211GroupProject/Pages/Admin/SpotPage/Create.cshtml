@page
@model PRN211GroupProject.Pages.Admin.SpotPage.CreateModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Spot.Name" class="control-label"></label>
				<input type="text" asp-for="Spot.Name" class="form-control" required placeholder="Fill Name"/>
				<span asp-validation-for="Spot.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Spot.Status" class="control-label"></label>
				<input type="radio" asp-for="Spot.Status" class="form-control" value ="true" required/> Active
				<input type="radio" asp-for="Spot.Status" class="form-control" value ="false" required /> Inactive
				<span asp-validation-for="Spot.Status" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
