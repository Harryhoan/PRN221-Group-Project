@page
@model PRN211GroupProject.Pages.Admin.SpotPage.EditModel

@{
    ViewData["Title"] = "Edit Spot";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title mb-0">Edit Spot</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Spot.Id" />
                    <input type="hidden" asp-for="Spot.Created" />

                    <div class="form-group mb-3">
                        <label asp-for="Spot.Name" class="control-label"></label>
                        <input asp-for="Spot.Name" class="form-control" required placeholder="Fill Name"/>
                        <span asp-validation-for="Spot.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-3">
                        <input class="form-check-input" asp-for="Spot.Status" />
                        <label class="form-check-label" for="Spot.Status">
                            @Html.DisplayNameFor(model => model.Spot.Status)
                        </label>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <div class="form-group text-center">
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
