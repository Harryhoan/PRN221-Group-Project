@page
@model PRN211GroupProject.Pages.AccountPage.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center text-danger">Delete Account</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3>Are you sure you want to delete this account?</h3>
                </div>
                <div class="card-body">
                    <h4>Account Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Account.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Account.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Account.Email)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Account.Email)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Account.Pass)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Account.Pass)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Account.Phone)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Account.Phone)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Account.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Account.Status)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Account.CountVoucher)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Account.CountVoucher)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Account.Role)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Account.Role.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Account.Voucher)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Account.Voucher.Name)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post" class="d-inline">
                        <input type="hidden" asp-for="Account.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                    <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
