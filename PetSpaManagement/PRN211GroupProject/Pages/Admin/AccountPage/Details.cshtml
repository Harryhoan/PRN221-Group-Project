@page
@model PRN211GroupProject.Pages.AccountPage.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Account Details - Kaiadmin Bootstrap 5 Admin Dashboard</title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="icon" href="~/adminAssets/assets/img/kaiadmin/favicon.ico" type="image/x-icon" />

    <script src="~/adminAssets/assets/js/plugin/webfont/webfont.min.js"></script>
    <script>
        WebFont.load({
            google: { families: ["Public Sans:300,400,500,600,700"] },
            custom: {
                families: ["Font Awesome 5 Solid", "Font Awesome 5 Regular", "Font Awesome 5 Brands", "simple-line-icons"],
                urls: ["../assets/css/fonts.min.css"],
            },
            active: function () {
                sessionStorage.fonts = true;
            },
        });
    </script>

    <link rel="stylesheet" href="../assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../assets/css/plugins.min.css" />
    <link rel="stylesheet" href="../assets/css/kaiadmin.min.css" />
    <link rel="stylesheet" href="../assets/css/demo.css" />
</head>
<body>
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h4 class="card-title">Account Details</h4>
                </div>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account.Name)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Account.Name)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account.Email)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Account.Email)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account.Pass)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Account.Pass)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account.Status)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Account.Status)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account.Phone)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Account.Phone)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account.CountVoucher)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Account.CountVoucher)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account.Role)</dt>
                    <dd class="col-sm-10">@Html.DisplayFor(model => model.Account.Role.Name)</dd>
                    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Account.Voucher)</dt>
                    <dd class="col-sm-10">
                        @if (Model.Account.Voucher != null && !String.IsNullOrEmpty(Model.Account.Voucher.Name))
                        {
                            @Html.DisplayFor(model => model.Account.Voucher.Name)
                        }
                        else
                        {
                            @ViewData[String.Empty]
                        }
                    </dd>
                </dl>
            </div>
            <div class="card-footer">
                <a asp-page="./Edit" asp-route-id="@Model.Account?.Id" class="btn btn-primary">Edit</a>
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>

    <script src="~/adminAssets/assets/js/core/jquery-3.7.1.min.js"></script>
    <script src="~/adminAssets/assets/js/core/popper.min.js"></script>
    <script src="~/adminAssets/assets/js/core/bootstrap.min.js"></script>
    <script src="~/adminAssets/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/adminAssets/assets/js/plugin/chart.js/chart.min.js"></script>
    <script src="~/adminAssets/assets/js/plugin/jquery.sparkline/jquery.sparkline.min.js"></script>
    <script src="~/adminAssets/assets/js/plugin/chart-circle/circles.min.js"></script>
    <script src="~/adminAssets/assets/js/plugin/datatables/datatables.min.js"></script>
    <script src="~/adminAssets/assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>
    <script src="~/adminAssets/assets/js/plugin/jsvectormap/jsvectormap.min.js"></script>
    <script src="~/adminAssets/assets/js/plugin/jsvectormap/world.js"></script>
    <script src="~/adminAssets/assets/js/plugin/sweetalert/sweetalert.min.js"></script>
    <script src="~/adminAssets/assets/js/kaiadmin.min.js"></script>
    <script src="~/adminAssets/assets/js/setting-demo.js"></script>
    <script src="~/adminAssets/assets/js/demo.js"></script>
</body>
</html>
