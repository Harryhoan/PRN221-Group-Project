@page
@model PRN211GroupProject.Pages.Admin.VoucherPage.EditModel

@{
    ViewData["Title"] = "Edit Voucher";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="card-title mb-0">Edit Voucher</h4>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Voucher.Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Voucher.Name" class="control-label"></label>
                        <input asp-for="Voucher.Name" class="form-control" required />
                        <span asp-validation-for="Voucher.Name" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Voucher.Discount" class="control-label"></label>
                        <input asp-for="Voucher.Discount" class="form-control" required type="number" step="0.01" />
                        <span asp-validation-for="Voucher.Discount" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Voucher.Expired" class="control-label"></label>
                        <input asp-for="Voucher.Expired" class="form-control" required type="date" />
                        <span asp-validation-for="Voucher.Expired" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Voucher.Reach" class="control-label"></label>
                        <input asp-for="Voucher.Reach" class="form-control" required />
                        <span asp-validation-for="Voucher.Reach" class="text-danger"></span>
                    </div>

                    <div class="form-group form-check mb-3">
                        <input class="form-check-input" asp-for="Voucher.Status" />
                        <label class="form-check-label" for="Voucher.Status">
                            @Html.DisplayNameFor(model => model.Voucher.Status)
                        </label>
                    </div>

                    <div class="form-group text-center">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
                <div class="form-group text-center">
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
