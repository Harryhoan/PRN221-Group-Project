@page
@model PRN211GroupProject.Pages.Admin.VoucherPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Voucher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Voucher.Name" class="control-label"></label>
                <input asp-for="Voucher.Name" class="form-control" required/>
                <span asp-validation-for="Voucher.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.Discount" class="control-label"></label>
                <input asp-for="Voucher.Discount" class="form-control" required type="number" max="100" min="1" step="1"/>
                <span asp-validation-for="Voucher.Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.Expired" class="control-label"></label>
                <input asp-for="Voucher.Expired" class="form-control" required/>
                <span asp-validation-for="Voucher.Expired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voucher.Reach" class="control-label"></label>
                <input asp-for="Voucher.Reach" class="form-control" required type="number" max="100" min="1" step="1" />
                <span asp-validation-for="Voucher.Reach" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Voucher.Status" /> @Html.DisplayNameFor(model => model.Voucher.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
