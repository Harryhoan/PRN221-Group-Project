@page
@model PRN211GroupProject.Pages.ServicePage.DeleteModel

@{
    ViewData["Title"] = "Delete Service";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1 class="text-center text-danger">Delete Service</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h3>Are you sure you want to delete this service?</h3>
                </div>
                <div class="card-body">
                    <h4>Service Details</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Service.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Service.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Service.Duration)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Service.Duration)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Service.Price)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Service.Price)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Service.Status)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Service.Status)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-center">
                    <form method="post" class="d-inline">
                        <input type="hidden" asp-for="Service.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                    <a asp-page="./Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
